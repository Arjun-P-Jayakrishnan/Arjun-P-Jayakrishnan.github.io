{
  "compilerOptions": {
    "target": "ES2020",                // Output modern JS
    "module": "CommonJS",             // Use ES modules
    "moduleResolution": "Node",     // Module import resolution
    "outDir": "dist",               // Output folder
    "strict": true,                 // Enable all strict type checks
    "esModuleInterop": true,        // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@style/*":["style/*"]
    }, 
    "types": ["@types/three"]
  },
  "include": ["src", "tsup.config.ts"],// Include your source code
  "exclude": ["node_modules",".gitignore"]                
}
